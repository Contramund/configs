# Gaps (no titlebars needed)
for_window [class=".*"] border pixel 3
# gaps outer 7 
gaps inner 20

# Natural scroling
exec --no-startup-id synclient NaturalScrolling=1 VertScrollDelta=-113

# Restore wallpaper os startup
exec --no-startup-id nitrogen --restore

# Set focused border
# class                 border  backgr. text    indicator
client.focused          #dcdccc #ff0000 #3c3b37 #ffcfaf
client.focused_inactive #3c3b37 #3c3b37 #7f9f7f #3c3b37
client.unfocused        #3c3b37 #3c3b37 #dcdccc #3c3b37
client.urgent           #dca3a3 #dca3a3 #dcdccc #3c3b37

# Set keybord layouts
#exec_always "setxkbmap -layout us,ru"
#exec_always "setxkbmap -option 'grp:caps_toggle'"
exec_always "setxkbmap -model pc104 -layout us,ru -option grp:caps_toggle"

# use ctrl + hjkl as arrows
mode "moving_hjkl" {
    bindsym --release j exec --no-startup-id xdotool key --clearmodifiers Down
    bindsym --release k exec --no-startup-id xdotool key --clearmodifiers Up
    bindsym --release h exec --no-startup-id xdotool key --clearmodifiers Left
    bindsym --release l exec --no-startup-id xdotool key --clearmodifiers Right

    bindsym --release ctrl+j exec --no-startup-id xdotool key --clearmodifiers Ctrl+Down
    bindsym --release ctrl+k exec --no-startup-id xdotool key --clearmodifiers Ctrl+Up
    bindsym --release ctrl+h exec --no-startup-id xdotool key --clearmodifiers Ctrl+Left
    bindsym --release ctrl+l exec --no-startup-id xdotool key --clearmodifiers Ctrl+Right

    bindsym Escape mode "default"
    bindsym Return mode "default"
    bindsym Mod1+i mode "default"
}
bindsym Mod1+i mode "moving_hjkl"


# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness
 
# Touchpad controls 
bindsym F4 exec --no-startup-id /home/contramund/.config/i3/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

#interactive screenshot by pressing printscreen
bindsym Print exec gnome-screenshot -i 
#crop-area screenshot by pressing Mod + printscreen
bindsym $mod+Print exec gnome-screenshot -a

# Make wi-fi chooseable
exec_always nm-applet

# Make keyboard disabling while typing 
exec syndaemon -i 1 -K -d  

# Make screen work without powering of after 5 min 
exec_always xset s off
exec_always xset -dpms

